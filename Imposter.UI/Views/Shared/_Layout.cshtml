<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Imposter.UI</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Imposter.UI.styles.css" asp-append-version="true" />
</head>
<body style="background: #0f1419;">
    <header>
        <!-- sticky top navbar -->
        <!-- stylish sticky navbar -->
        <nav class="navbar fixed-top navbar-dark px-4 justify-content-center"
             style="background: rgba(13, 27, 42, .85);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(0, 255, 255, .25);
            box-shadow: 0 0 15px rgba(0, 255, 255, .25);">
            <a class="navbar-brand fw-bold"
                  style="color:#00ffff; letter-spacing:2px; text-shadow: 0 0 8px #00ffff;"asp-controller="Home" asp-action="Index">
                IMPOSTER
            </a>
            
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Styles", required: false)
    <script>
        function redirectPost(url, params) {
            const form = document.createElement("form");
            form.method = "POST";
            form.action = url;

            for (const key in params) {
                if (params.hasOwnProperty(key)) {
                    const hiddenField = document.createElement("input");
                    hiddenField.type = "hidden";
                    hiddenField.name = key;
                    hiddenField.value = params[key];
                    form.appendChild(hiddenField);
                }
            }

            document.body.appendChild(form);
            form.submit();
        }
    </script>
</body>
</html>

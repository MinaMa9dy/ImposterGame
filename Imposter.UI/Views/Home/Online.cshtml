@model List<RoomViewModel>
@{
    ViewData["Title"] = "Online";
}

<h1>Online</h1>
<!-- rooms grid -->
<div class="container py-5 mt-5" >
    <div class="row g-4">
        @for(int i = 0; i < Model.Count(); i++)
        {
            if (i % 2 == 0)
            {
                <div class="col-sm-6 col-md-4">
                    <div class="card h-100 border-0 rounded-3 shadow room-card"
                    style="background:#1b263b; transition:transform .2s, box-shadow .2s;">
                        <div class="card-body text-white d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge"
                                style="background:#00ffff; color:#0d1b2a;">@Model[i].category</span>

                            </div>
                            <h5 class="mb-1">@Model[i].Name</h5>
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-people-fill me-1"></i>
                                <span>@Model[i].Count / 6 players</span>
                            </div>
                            <a class="btn btn-sm btn-outline-light mt-auto join-btn"
                               asp-controller="Room"
                               asp-action="Lobby"
                               asp-route-roomId="@Model[i].roomId"
                                style="border-color:#00ffff; color:#00ffff;"
                                onmouseover="this.style.background='#00ffff'; this.style.color='#0d1b2a';"
                                onmouseout="this.style.background='transparent'; this.style.color='#00ffff';">
                                Join
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col-sm-6 col-md-4">
                    <div class="card h-100 border-0 rounded-3 shadow room-card"
                         style="background:#1b263b; transition:transform .2s, box-shadow .2s;">
                        <div class="card-body text-white d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge"
                                      style="background:#ff00cc; color:#fff;">@Model[i].category</span>

                            </div>

                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-people-fill me-1"></i>
                                <span>@Model[i].Count / 6 players</span>
                            </div>
                            <a class="btn btn-sm btn-outline-light mt-auto join-btn"
                                    asp-controller="Room"
                                    asp-action="Lobby"
                                    asp-route-roomId="@Model[i].roomId"
                                    style="border-color:#ff00cc; color:#ff00cc;"
                                    onmouseover="this.style.background='#ff00cc'; this.style.color='#fff';"
                                    onmouseout="this.style.background='transparent'; this.style.color='#ff00cc';">
                                Join
                            </a>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>

<style>
    .room-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 0 20px rgba(0, 255, 255, .35) !important;
    }
</style>